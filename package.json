{
  "name": "aktivitaeten",
  "version": "1.0.0",
  "description": "Aktivitäten-Tracker mit Spracheingabe",
  "main": "./out/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:win": "electron-vite build && electron-builder --win",
    "typecheck": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@langchain/core": "^1.1.12",
    "@langchain/openai": "^1.2.1",
    "@xenova/transformers": "^2.17.2",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "openai": "^6.16.0",
    "pinia": "^2.3.0",
    "vue": "^3.5.13",
    "xlsx": "^0.18.5",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/glob": "^9.0.0",
    "@types/node": "^22.10.5",
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^39.0.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^5.0.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vue-tsc": "^2.2.0"
  },
  "build": {
    "appId": "com.aktivitaeten.app",
    "productName": "Aktivitäten",
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "resources/icon.png",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Diese App benötigt Zugriff auf das Mikrofon für Spracheingabe."
      }
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "out/**/*",
      "resources/**/*"
    ]
  }
}
